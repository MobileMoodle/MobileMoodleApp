<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grades_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Switch
        android:id="@+id/sw_due_v_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Courses"
        android:textOff="Due Soon"
        android:layout_marginLeft="30dp"

        android:layout_alignBaseline="@+id/add_event_p"
        android:layout_alignBottom="@+id/add_event_p"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/add_event_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/ic_action_new_event"
        android:layout_marginRight="30dp"
        android:background="@drawable/greybutton"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ExpandableListView
        android:layout_marginTop="10dp"
        android:id="@+id/planning_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:childDivider="#000000"
        android:groupIndicator="@color/transparent"
        android:layout_below="@+id/add_event_p">

    </ExpandableListView>

</RelativeLayout>