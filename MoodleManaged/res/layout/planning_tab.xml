<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grades_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Switch
        android:id="@+id/sw_due_v_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Courses"
        android:textOff="Due Soon"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/course_spinner_p"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/course_spinner_p"
        android:layout_centerHorizontal="@+id/sw_due_v_course"
        android:layout_toRightOf="@+id/sw_due_v_course"
        android:layout_width="200dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"  />

    <ExpandableListView
        android:layout_marginTop="10dp"
        android:id="@+id/planning_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:childDivider="#000000"
        android:groupIndicator="@color/transparent"
        android:layout_below="@+id/course_spinner_p">

    </ExpandableListView>

</RelativeLayout>